<%
    action= "/api/todo/" + todoToUpdate.id + "/completed"; 
%>
    <div class="row">
        <div class="col-md-6">
            <h3>Todo Completed</h3>
            <p><span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span> I have already completed this task, and I want to set this task to COMPLETED status.</p>
            <form action="<%=action%>" method="POST" class="form-horizontal">

                <button type="submit" class="btn btn-success col-md-offset-3 btn-lg" style="margin-top:20px;">This Task Completed !</button>
            </form>
        </div>
    </div>