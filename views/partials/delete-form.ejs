<%
    method= "DELETE";
    action= "/api/todo/" + todoToUpdate.id; 
%>
    <div class="row">
        <div class="col-md-6">
            <h3>Delete This Todo Task</h3>
            <p><span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span> I know the rules, but I still want to DELETE this todo task.</p>
            <form action="<%=action%>" method="POST" class="form-horizontal">

                <input type="hidden" name="_method" value="<%=method%>" />
                <button type="submit" class="btn btn-danger col-md-offset-3 btn-lg" style="margin-top:20px;">Delete This Todo Task!</button>
            </form>
        </div>
    </div>