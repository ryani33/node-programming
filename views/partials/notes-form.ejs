<%
    action= "/api/todo/" + todoToUpdate.id + "/notes"; 
%>
    <div class="row">
        <div class="col-md-6">
            <h3>Add Notes</h3>
            <form action="<%=action%>" method="POST" class="form-horizontal">

                <div class="form-group">
                    <label class="control-label col-sm-3" for="notes">Notes</label>
                    <div class="col-sm-9">
                        <textarea name="text" class="form-control" id="text" placeholder="An optional area for more notes"><%= todoToUpdate ? todoToUpdate.taskNotes : "" %></textarea>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-default col-md-offset-1">Add Notes</button>
            </form>
        </div>
    </div>