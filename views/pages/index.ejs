<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="container">
        <% include ../partials/header %>

        <main>
            <h2><%= type %></h2>
            <hr/>
            <% if (todos.length > 0) { %>
                <ul>
                    <% todos.forEach(function(todo) { %>
                        <li><a href="/api/todo/<%=todo.id%>"><%= todo.taskTitle%></a></li>
                    <% }) %>
                </ul>
            <% } else if (trueType === "completed") { %>
                <p> <i>- No Completed Todo Tasks Currently, Please Complete One.</i> <span class="glyphicon glyphicon-hand-down" aria-hidden="true"></p>
            <% } else if (trueType === "all") { %>
                <p> <i>- No Any Tasks Currently, Please Create One Below.</i> <span class="glyphicon glyphicon-hand-down" aria-hidden="true"></p>
            <% } else { %>
                <p> <i>- No Open Todo Tasks Currently, Please Create One Below.</i> <span class="glyphicon glyphicon-hand-down" aria-hidden="true"></p>
            <% } %>
            
            <a href="/api/todo/?type=completed">Completed</a> - 
            <a href="/api/todo/?type=open">Open</a> - 
            <a href="/api/todo/?type=all">All</a> 
                       
            <section>
                <% include ../partials/todo-form %>
            </section>
        </main>
    </div>

</html>